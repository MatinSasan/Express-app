extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card-header
                            h1.product__title #{product.title}
                        .card-image
                            img(src="https://cdn.pixabay.com/photo/2016/09/10/17/18/book-1659717_960_720.jpg", alt="some pic")
                        .card__content
                            h2.product__Price $19.99
                            p.roduct__description A very interesting book
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products
